@model IEnumerable<Employee>

@{
    ViewBag.Title = "Employee List";
}

<div class="card-deck">
    @foreach (var employee in Model)
    {
        <div class="card m-3">
            <div class="card-header">
                <h3>@employee.Name</h3>
            </div>
            <img class="card-img-top" src="~/images/noimage.jpg" />
            <div class="card-footer text-center">
                @*The code that's using the anchor tag helper will generate the correct link*@
                <a asp-controller="home" asp-action="details" asp-route-id="@employee.Id">View</a>

                @*The code that's not using the anchor tag helper continues to generate link where"/godigitalpro" is missing.*@
                <a href="/home/details/@employee.Id" class="btn btn-primary">View</a>

                <a href="#" class="btn btn-primary">Edit</a>
                <a href="#" class="btn btn-danger">Delete</a>
            </div>
        </div>
    }
</div>
